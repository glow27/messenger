{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "html"
    ],
    "ignorePatterns": ["**/*.scss"],
    "rules": {
      "quotes": ["error", "single"],
      "no-useless-escape": "warn",
      "no-prototype-builtins": "off"
    }
}
